<form method="POST" action="/products/{{#if dataValues.id}}{{dataValues.id}}{{/if}}">

    {{#if id}}
    <input type="hidden" name="id" value="{{dataValues.id}}" />
    {{/if}}
    <div>
        <label for="name">Name:</label> <input name="name" type="text" value="{{dataValues.name}}" />
    </div>
    <div>
        <label for="slug">Slug:</label> <input name="slug" type="text" value="{{dataValues.slug}}" />
    </div>
    <div>
        <label for="description">Description:</label> <input name="description" type="text"
            value="{{dataValues.description}}" />
    </div>
    <div>
        <label for="price">Price:</label> <input name="price" type="text" value="{{dataValues.price}}" />
    </div>
    <div>
        <label for="is_published">Published:</label> <input name="is_published" type="checkbox" {{#if
            dataValues.is_published}} checked {{/if}} />
    </div>
    <div>
        <input type="submit" value="Submit" />
    </div>
</form>