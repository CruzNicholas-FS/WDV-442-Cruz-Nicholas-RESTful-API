<form method="POST" action="/variants/{{#if variant.dataValues.id}}{{variant.dataValues.id}}{{/if}}">

    {{#if variant.dataValues.id}}
    <input type="hidden" name="id" value="{{variant.dataValues.id}}" />
    {{/if}}
    <div>
        <label for="name">Name:</label> <input name="name" type="text" value="{{variant.dataValues.name}}" />
    </div>
    <div>
        <label for="slug">Slug:</label> <input name="slug" type="text" value="{{variant.dataValues.slug}}" />
    </div>
    <div>
        <label for="description">Description:</label> <input name="description" type="text"
            value="{{variant.dataValues.description}}" />
    </div>
    <div>
        <label for="price">Price:</label> <input name="price" type="number" value="{{variant.dataValues.price}}" />
    </div>
    <div>
        <label for="inventory">Inventory:</label> <input name="inventory" type="number"
            value="{{variant.dataValues.inventory}}" />
    </div>
    <div>
        <label>Product</label>
        <select name="ProductId">
            {{#each products}}
            <option value="{{this.dataValues.id}}" {{#if (isEqual this.dataValues.id ../variant.dataValues.productId )
                }} selected {{/if}}>
                {{this.dataValues.name}}
            </option>
            {{/each}}
        </select>
    </div>
    <div>
        <input type="submit" value="Submit" />
    </div>
</form>