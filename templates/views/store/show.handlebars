{{> nav}}
<div>
    <img src="/public/images/{{variant.Images.[0].id}}{{variant.Images.[0].extension}}" alt="" width="400"
        height="200" />
    <div>
        {{#each variant.Images as |image|}}
        <a href="#">
            <img src="/public/images/{{image.id}}{{image.extension}}" alt="" width="100" height="50">
        </a>
        {{/each}}
    </div>

    <div>
        <h3><a href="#" class="">{{product.name}} - {{variant.name}}</a></h3>
        <p>{{product.description}}</p>

        <h5>Options:</h5>
        <p>
            {{#each product.Variants as |option|}}
            {{#if (isEqual option.id variant.id)}}
            {{option.name}}
            {{else}}
            <a href="/store/products/{{../product.slug}}?v={{option.slug}}">{{option.name}}</a>
            {{/if}}
            {{/each}}
        </p>
        <div>
            <h5>Price:</h5> <span>{{variant.price}}</span>
        </div>
        <div>
            <h5>Stock:</h5> <span>
                {{#if (lessThan variant.inventory 10)}}
                Low Stock
                {{else if (isEqual variant.inventory 0)}}
                Out of Stock
                {{else}}
                In Stock
                {{/if}}
            </span>
        </div>
        <div>
            <label>Quantity:</label>
            <input type="quantity" placeholder="1" />
        </div>
        <div>
            <button type="button">
                <i class="fa fa-shopping-cart"></i> Add to Cart
            </button>
        </div>
    </div>
</div>